<% if flash[:notice] %>
  <p class="notice" ><%= flash[:notice] %></p>
<% end %>


<h1>Editing book</h1>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
  <ul>
    <li>
    <%= message %>
     </li>
  </ul>
  <% end %>
<% end %>

  <h4>Title</h4>
  
  <p>
  <%= f.text_field :title %>
  </p>


  <h4>Body</h4>
  
  <p>
  <%= f.text_area :body %>
  </p>
  
  <%= f.submit 'Update Book' %>
  
  <% end %>

<%= link_to 'show', book_path %>

